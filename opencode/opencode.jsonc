{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox",
  "autoupdate": true,
  "tui": {
    "scroll_acceleration": {
      "enabled": true,
    },
  },
  "model": "zai-coding-plan/glm-5",
  "small_model": "google/gemini-2.5-flash-lite",
  "permission": "allow",
  "mcp": {
    "Ref": {
      "type": "local",
      "command": ["bunx", "ref-tools-mcp@latest"],
      "enabled": false,
      "environment": {
        "REF_API_KEY": "{env:REF_API_KEY}",
      },
    },
  },
}
