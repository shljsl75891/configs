{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox",
  "autoupdate": true,
  "provider": {
    "amazon-bedrock": {
      "options": {
        "region": "us-east-2",
      },
    },
  },
  "model": "github-copilot/claude-sonnet-4.5",
  "small_model": "github-copilot/gpt-5-mini",
  "mcp": {
    "Ref": {
      "type": "local",
      "command": ["bunx", "ref-tools-mcp@latest"],
      "enabled": true,
      "environment": {
        "REF_API_KEY": "{env:REF_API_KEY}",
      },
    },
  },
}
