{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox",
  "autoupdate": true,
  "provider": {
    "amazon-bedrock": {
      "options": {
        "region": "us-east-2",
      },
    },
  },
  "tui": {
    "scroll_acceleration": {
      "enabled": true,
    },
  },
  "model": "zai-coding-plan/glm-4.7",
  "small_model": "zai-coding-plan/glm-4.5-air",
  "permission": "allow",
  "mcp": {
    "Ref": {
      "type": "local",
      "command": ["bunx", "ref-tools-mcp@latest"],
      "enabled": true,
      "environment": {
        "REF_API_KEY": "{env:REF_API_KEY}",
      },
    },
  },
}
