[
  // File Tree
  { "command": "workbench.action.toggleSidebarVisibility", "key": "ctrl+b" },
  {
    "command": "workbench.files.action.focusFilesExplorer",
    "key": "ctrl+b",
    "when": "editorTextFocus"
  },
  {
    "command": "explorer.newFile",
    "key": "n",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "command": "explorer.newFolder",
    "key": "shift+n",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "command": "workbench.files.action.collapseExplorerFolders",
    "key": "ctrl+a",
    "when": "filesExplorerFocus && !inputFocus"
  },
  {
    "command": "renameFile",
    "key": "r",
    "when": "filesExplorerFocus && !inputFocus"
  },
  // Terminal
  {
    "key": "ctrl+\\",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    "key": "ctrl+`",
    "command": "-workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    "command": "workbench.action.toggleMaximizedPanel",
    "key": "ctrl+shift+m",
    "when": "terminalFocus"
  },
  {
    "command": "workbench.action.terminal.focusNext",
    "key": "ctrl+]",
    "when": "terminalFocus"
  },
  {
    "command": "workbench.action.terminal.focusPrevious",
    "key": "ctrl+[",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+c",
    "command": "workbench.action.terminal.changeColorActiveTab",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+i",
    "command": "workbench.action.terminal.changeIconActiveTab",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+shift+r",
    "command": "workbench.action.terminal.renameActiveTab",
    "when": "terminalFocus"
  },
  {
    "command": "workbench.action.terminal.new",
    "key": "ctrl+shift+n",
    "when": "terminalFocus"
  },
  {
    "command": "workbench.action.terminal.kill",
    "key": "ctrl+shift+k",
    "when": "terminalFocus"
  },
  // Navigation in suggestions
  {
    "command": "selectNextSuggestion",
    "key": "ctrl+n",
    "when": "editorTextFocus && suggestWidgetVisible"
  },
  {
    "command": "selectPrevSuggestion",
    "key": "ctrl+p",
    "when": "editorTextFocus && suggestWidgetVisible"
  },
  {
    "command": "workbench.action.quickOpenSelectNext",
    "key": "ctrl+n",
    "when": "inQuickOpen || inCommandPalette"
  },
  {
    "command": "workbench.action.quickOpenSelectPrevious",
    "key": "ctrl+p",
    "when": "inQuickOpen || inCommandPalette"
  }
]
