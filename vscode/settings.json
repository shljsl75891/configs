{
  // default formatters
  "[css]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[html]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[json]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[jsonc]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[lua]": { "editor.defaultFormatter": "JohnnyMorganz.stylua" },
  "[typescript]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[typescriptreact]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "betterGitLineBlame.maxSummaryLength": 80,
  "betterGitLineBlame.showStatusBarItem": true,
  "breadcrumbs.enabled": false,
  "chat.editor.fontSize": 11,
  "chat.editor.lineHeight": 1.15,
  "debug.console.fontFamily": "TX02 Nerd Font",
  "debug.console.fontSize": 11,
  "editor.autoClosingBrackets": "never",
  // editor settings
  "editor.autoClosingQuotes": "never",
  "editor.bracketPairColorization.enabled": false,
  "editor.codeActionsOnSave": { "source.organizeImports": "explicit" },
  "editor.codeLens": false,
  "editor.cursorStyle": "block",
  "editor.fontFamily": "TX02 Nerd Font",
  "editor.fontLigatures": false,
  "editor.fontSize": 13,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": false,
  "editor.guides.highlightActiveBracketPair": false,
  "editor.guides.highlightActiveIndentation": false,
  "editor.guides.indentation": false,
  "editor.hover.enabled": false,
  "editor.inlineSuggest.syntaxHighlightingEnabled": false,
  "editor.lightbulb.enabled": "off",
  "editor.lineHeight": 1.2,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.links": false,
  "editor.matchBrackets": "never",
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.occurrencesHighlight": "off",
  "editor.renderWhitespace": "none",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.selectionHighlight": false,
  "editor.tabSize": 2,
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      { "scope": ["comment"], "settings": { "fontStyle": "italic" } },
      {
        "scope": ["variable.object", "entity.name.type", "support.type"],
        "settings": { "fontStyle": "" }
      },
      { "scope": ["entity.name.function"], "settings": { "fontStyle": "bold" } }
    ]
  }, // explorer settings
  "explorer.compactFolders": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.badges": false,
  "explorer.excludeGitIgnore": false,
  // improve performance
  "extensions.experimental.affinity": { "asvetliakov.vscode-neovim": 1 },
  "extensions.ignoreRecommendations": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/.hg/store/**": true,
    "**/node_modules/**": true,
    "**/dist/**": true
  },
  "files.trimTrailingWhitespace": true,
  "git.openRepositoryInParentFolders": "always",
  "git.decorations.enabled": false,
  "html.autoClosingTags": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "search.searchOnType": false,
  "scm.diffDecorations": "none",
  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.feedback.enabled": false,
  "telemetry.telemetryLevel": "off",
  // terminal settings
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.gpuAcceleration": "off",
  "terminal.integrated.lineHeight": 1,
  "typescript.updateImportsOnFileMove.enabled": "always",
  // turn off annoyances
  "update.showReleaseNotes": false,
  // window settings
  "window.commandCenter": false,
  "window.customTitleBarVisibility": "never",
  "window.density.editorTabHeight": "compact",
  "window.dialogStyle": "native",
  "window.menuBarVisibility": "toggle",
  "window.titleBarStyle": "native",
  "workbench.activityBar.location": "hidden",
  "workbench.editor.enablePreview": false,
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.showIcons": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabSizing": "shrink",
  "workbench.layoutControl.enabled": false,
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": false,
  "workbench.tips.enabled": false,
  "workbench.tree.enableStickyScroll": true,
  "workbench.tree.indent": 20,
  "workbench.tree.stickyScrollMaxItemCount": 3,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.colorTheme": "Gruvbox Dark Hard"
}
