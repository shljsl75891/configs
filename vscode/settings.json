{
  // default formatters
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // editor settings
  "breadcrumbs.enabled": false,
  "debug.console.fontFamily": "MesloLGS Nerd Font",
  "debug.console.fontSize": 12,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "editor.codeLens": false,
  "editor.cursorStyle": "block",
  "editor.fontFamily": "MesloLGS Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": false,
  "editor.guides.highlightActiveBracketPair": false,
  "editor.guides.highlightActiveIndentation": false,
  "editor.guides.indentation": false,
  "editor.hover.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.matchBrackets": "near",
  "editor.minimap.autohide": true,
  "editor.minimap.renderCharacters": false,
  "editor.occurrencesHighlight": "off",
  "editor.renderWhitespace": "none",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.selectionHighlight": false,
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": ["comment"],
        "settings": { "fontStyle": "italic" }
      },
      {
        "scope": ["variable.object", "entity.name.type", "support.type"],
        "settings": { "fontStyle": "" }
      },
      { "scope": ["entity.name.function"], "settings": { "fontStyle": "bold" } }
    ]
  }, // explorer settings
  "explorer.compactFolders": false,
  // imporve vim extension performance
  "extensions.experimental.affinity": { "vscodevim.vim": 1 },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/dist": true
  },
  "git.openRepositoryInParentFolders": "always",
  "html.autoClosingTags": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "liveServer.settings.donotShowInfoMsg": true,
  "search.searchOnType": false,
  "telemetry.telemetryLevel": "off",
  // terminal settings
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.gpuAcceleration": "on",
  "typescript.updateImportsOnFileMove.enabled": "always",
  // turn off annoyances
  "update.showReleaseNotes": false,
  // vscode-vim extension config
  "vim.enableNeovim": true,
  "vim.foldfix": true,
  "vim.gdefault": true,
  "vim.handleKeys": {
    // vim keys
    "<C-a>": true,
    "<C-h>": true,
    "<C-o>": true,
    "<C-r>": true,
    "<C-u>": true,
    "<C-v>": true,
    "<C-w>": true,
    "<C-x>": true,
    "<C-i>": true
  },
  "vim.highlightedyank.color": "#EB6F92",
  "vim.highlightedyank.duration": 60,
  "vim.highlightedyank.enable": true,
  // vim keybindings for insert mode
  "vim.insertModeKeyBindings": [
    { "before": ["<C-h>"], "commands": ["editor.action.triggerParameterHints"] }
  ],
  "vim.leader": " ",
  // vim keybindings for normal mode
  "vim.normalModeKeyBindings": [
    // editor tabs handling
    {
      "before": ["<S-h>"],
      "commands": ["workbench.action.previousEditor"],
      "silent": true
    },
    {
      "before": ["<S-l>"],
      "commands": ["workbench.action.nextEditor"],
      "silent": true
    },
    {
      "before": ["<leader>", "c", "o"],
      "commands": ["workbench.action.closeOtherEditors"],
      "silent": true
    },
    // vertical movements
    { "after": ["<C-u>", "z", "z"], "before": ["<C-u>"] },
    { "after": ["<C-d>", "z", "z"], "before": ["<C-d>"] },
    // matching template tags
    {
      "before": ["5"],
      "commands": ["editor.emmet.action.matchTag"],
      "silent": true
    },
    // lsp actions
    {
      "before": ["K"],
      "commands": ["editor.action.showDefinitionPreviewHover"],
      "silent": true
    },
    {
      "before": ["<leader>", "t", "b"],
      "commands": ["editor.debug.action.toggleBreakpoint"],
      "silent": true
    },
    {
      "before": ["g", "D"],
      "commands": ["editor.action.goToTypeDefinition"],
      "silent": true
    },
    {
      "before": ["<leader>", "r", "r"],
      "commands": ["editor.action.goToReferences"],
      "silent": true
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": ["editor.action.rename"],
      "silent": true
    },
    {
      "before": ["<leader>", "c", "a"],
      "commands": ["editor.action.quickFix"],
      "silent": true
    },
    // diagnostics navigation
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"],
      "silent": true
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"],
      "silent": true
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    // use vscode undo & redo
    {
      "before": ["u"],
      "after": [],
      "commands": [{ "command": "undo", "args": [] }],
      "silent": true
    },
    {
      "before": ["<C-r>"],
      "after": [],
      "commands": [{ "command": "redo", "args": [] }],
      "silent": true
    }
  ],
  "vim.useCtrlKeys": false,
  "vim.useSystemClipboard": false,
  // vim keybindings for visual mode
  "vim.visualModeKeyBindings": [
    // indentation
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"],
      "silent": true
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"],
      "silent": true
    },
    // moving lines
    {
      "before": ["J"],
      "commands": ["editor.action.moveLinesDownAction"],
      "silent": true
    },
    {
      "before": ["K"],
      "commands": ["editor.action.moveLinesUpAction"],
      "silent": true
    }
  ],
  // vim recursive keybindings for visual mode
  "vim.visualModeKeyBindingsNonRecursive": [
    // overrides register and paste
    { "after": ["p", "g", "v", "y"], "before": ["p"] }
  ],
  // window settings
  "window.commandCenter": false,
  "window.customTitleBarVisibility": "never",
  "window.dialogStyle": "custom",
  "window.menuBarVisibility": "toggle",
  "workbench.activityBar.location": "hidden",
  "workbench.colorCustomizations": {
    "tab.activeBorder": "#EB6F92",
    "tab.activeBorderTop": "#EB6F92",
    "terminal.tab.activeBorder": "#EB6F92"
  },
  "workbench.editor.enablePreview": false,
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.showIcons": false,
  "workbench.iconTheme": null,
  "workbench.layoutControl.enabled": false,
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.statusBar.visible": true,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.colorTheme": "NeoRose-VimPine"
}
